{
  "name": "oro-incoming-tx",
  "version": "1.0.0",
  "main": "server.ts",
  "license": "MIT",
  "scripts": {
    "dev": "export NODE_ENV=dev && nodemon --ext '.ts' ./server.ts",
    "clean": "rimraf ./dist",
    "killport": "kill-port --port 1337",
    "build": "babel ./ --extensions '.ts' --out-dir ./dist --config-file ./.babelrc --no-copy-ignored --copy-files && rm -rf ./dist/node_modules ./dist/package.json ./dist/tsconfig.json",
    "server": "pm2 start -f ./dist/src/server.js --name oro-incoming-tx",
    "start": "export NODE_ENV=prod && npm-run-all clean killport build server"
  },
  "dependencies": {
    "@babel/cli": "^7.13.16",
    "@types/cron": "^1.7.2",
    "babel-plugin-dotenv-import": "^2.2.0",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.3.0",
    "helmet": "^4.6.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-emoji": "^1.11.0",
    "node-fetch": "^2.6.1",
    "redis": "^3.1.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/plugin-transform-modules-commonjs": "^7.14.0",
    "@babel/plugin-transform-runtime": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime": "^7.14.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.12",
    "@types/node": "^16.0.0",
    "@types/node-emoji": "^1.8.1",
    "@types/redis": "^2.8.30",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "eslint": "^7.25.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
